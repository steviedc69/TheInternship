<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - The Internship</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Applicatie voor het beheren van stages. In samenwerking met de HoGent.">
    <meta name="author" content="iDev">
    <style>
        body {
            padding-top: 60px;
            }
    </style>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">HoGent - The Internship</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewBag.Active == "Home" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="@(ViewBag.Active == "Over" ? "active" : "")">@Html.ActionLink("Over", "About", "Home")</li>
                    <li class="@(ViewBag.Active == "Contact" ? "active" : "")">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger">@TempData["Message"]</div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-success">@TempData["Info"]</div>
        }
        @RenderBody()
        

        <hr style="clear: both" />

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - The Internship</p>
                    <p>Steven De Cock - Thomas Cloostermans - Christof Van Cauteren | iDev</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jj")
    @RenderSection("scripts", required: false)
</body>
</html>
