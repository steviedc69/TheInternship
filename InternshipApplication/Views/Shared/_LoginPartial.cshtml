@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="@(ViewBag.Active == "Registreer" ? "active" : "")">@Html.ActionLink("Registreer", "Register", "User", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="@(ViewBag.Active == "Log in" ? "active" : "")">@Html.ActionLink("Log in", "Login", "User", routeValues: null, htmlAttributes: new { id = "loginLink"})</li>
        <li class="@(ViewBag.Active == "Add contact" ? "active" : "")">@Html.ActionLink("Add contact", "AddContact", "User", routeValues: null, htmlAttributes: new { id = "addContactLink"})</li>
        <li class="divider-vertical"></li>
        <li>
            <a href="http://hogent.be/" class="hogent-logo" target="_blank"><img src="~/Images/HG-woordmerk.png" height="15px"/></a>
        </li>
    </ul>

}
