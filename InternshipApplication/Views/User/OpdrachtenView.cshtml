@model InternshipApplication.Models.Domain.Bedrijf

@{
    ViewBag.Title = "OpdrachtenView";
}

<h2>Aanvragen tot stageopdrachten</h2>
<div>
    <button class="btn btn-lg btn-block">Voeg Opdracht toe</button>
</div>

@foreach (var item in Model.Opdrachten)
{
    <div style="margin-bottom: 20px">
        @{ Html.RenderAction("OpdrachtenPartial", "User", new {Bedrijfid = Model.Id,Opdrachtid = item.Id});}
    </div>
}
