@model InternshipApplication.ViewModels.OpdrachtViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddOpdracht</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>OpdrachtViewModel</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Omschrijving)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Omschrijving)
                @Html.ValidationMessageFor(model => model.Omschrijving)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Semesters, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Semesters,
                        Model.Semesters, "--Selecteer semester--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Semesters)
                </div>
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.Specialisatie)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.AdminComment)
                @Html.ValidationMessageFor(model => model.Specialisatie)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.AdminComment)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.AdminComment)
                @Html.ValidationMessageFor(model => model.AdminComment)
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
