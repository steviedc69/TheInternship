@model InternshipApplication.ViewModels.ContactModel

@{
    ViewBag.Title = "Add contact";
    ViewBag.Active = "AddContact";
}

@using (Html.BeginForm("AddContact", "User", FormMethod.Post,
    new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h4>Registreer</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Naam, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Naam, new {@class = "form-control", style = "width: 50%" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Voornaam, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Voornaam, new {@class = "form-control", style = "width: 50%" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Functie, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Functie, new {@class = "form-control", style = "width: 50%" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactEmail, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ContactEmail, new {@class = "form-control", style = "width: 50%" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ContactTelNr, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ContactTelNr, new {@class = "form-control", style = "width: 50%" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GsmNummer, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.GsmNummer, new {@class = "form-control", style = "width: 50%" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Voeg toe" style="width: 50%" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

